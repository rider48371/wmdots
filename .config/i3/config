bindsym $mod+Shift+3 move container to workspace number 3 Chat
bindsym $mod+Shift+4 move container to workspace number 4 Spotify
bindsym $mod+Shift+5 move container to workspace number 5 Plex
bindsym $mod+Shift+6 move container to workspace number 6 Email
bindsym $mod+Shift+7 move container to workspace number 7 Code
