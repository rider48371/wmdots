#Keybind Helper
bindsym $mod+h exec alacritty -e ~/.config/bspwm/keyhelper.sh

# start dmenu (a program launcher)
#bindsym $mod+d exec --no-startup-id dmenu_run
bindsym $mod+Shift+Return exec rofi -show drun -modi drun -line-padding 4 -hide-scrollbar -show-icons 
bindsym $mod+Shift+p exec rofi-show run
# A more modern dmenu replacement is rofi:
